{
    "name": "chatter-laravel/core",
    "description": "A simple forum package for your laravel app",
    "license": "MIT",
    "authors": [
        {
            "name": "Santiago Barbat",
            "email": "barbatsan@gmail.com"
        }
    ],
    "require": {
        "laravel/framework": "^8.0.0",
        "laravel/passport": "^10",
        "mews/purifier": "^3.1",
        "cviebrock/eloquent-sluggable": "^8.0.0",
        "laravel-frontend-presets/tailwindcss": "~4",
        "laravel/ui": "^3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.10",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.5|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Chatter\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chatter\\Core\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Chatter\\Core\\ChatterServiceProvider"
            ]
        }
    }
}
